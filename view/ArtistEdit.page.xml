<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/ArtistList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{artistHome.wire}"/>

   <param name="artistFrom"/>
   <param name="artistId" value="#{artistHome.artistId}"/>
   <param name="movieId" value="#{movieHome.movieId}"/>


   <navigation from-action="#{artistHome.persist}">
      <rule>
         <end-conversation/>
         <redirect view-id="/Artist.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{artistHome.update}">
      <rule>
         <end-conversation/>
         <redirect view-id="/Artist.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{artistHome.revert}">
      <rule>
         <end-conversation/>
         <redirect view-id="/Artist.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{artistHome.remove}">
      <rule>
         <end-conversation/>
         <redirect view-id="/ArtistList.xhtml"/>
      </rule>
   </navigation>

</page>
